<Window x:Class="Dz_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dz_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="dgEmployee" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="0,43,0,0" VerticalAlignment="Top" Height="213" Width="310" SelectionChanged="dgEmployee_SelectionChanged">
        </DataGrid>
        <DataGrid x:Name="dgDepartment" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="403,43,0,0" VerticalAlignment="Top" Height="213" Width="104" SelectionChanged="dgDepartment_SelectionChanged">
        </DataGrid>
    </Grid>
</Window>
